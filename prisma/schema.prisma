// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TodoItem {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  done   Boolean @default(false)
}

model Product{
  uId String @id @default(auto()) @map("_id") @db.ObjectId
  id        Int
  name      String
  img_src   String
  old_price Float
  new_price Float
  category  Int
}

model Order {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  surname        String
  phone          String
  email          String
  county         String
  city           String
  address        String
  postalCode     String
  cash           Boolean
  packaged       Boolean
  itemsOrdered   Json[]
  voucher        String?
  amountToPay    Float
  status         String
}